<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg12">

    <!-- Title: Smart Health -->
    <TextView
        android:id="@+id/textViewHADTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart Health"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <!-- Subtitle: Registration -->
    <TextView
        android:id="@+id/textViewAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/textViewHADTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Username Field -->
    <EditText
        android:id="@+id/editTextAppFullName"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:hint="  Username"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/colorWhite"
        android:paddingLeft="20dp"
        android:layout_below="@id/textViewAppTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <!-- Email Field -->
    <EditText
        android:id="@+id/editTextAppAddress"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:hint="  Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/colorWhite"
        android:paddingLeft="20dp"
        android:layout_below="@id/editTextAppFullName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <!-- Password Field -->
    <EditText
        android:id="@+id/editTextAppContactNumber"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:hint="  Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/colorWhite"
        android:paddingLeft="20dp"
        android:layout_below="@id/editTextAppAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <!-- Confirm Password Field -->
    <EditText
        android:id="@+id/editTextAppFees"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_baseline_security_24"
        android:hint="  Confirm Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/colorWhite"
        android:paddingLeft="20dp"
        android:layout_below="@id/editTextAppContactNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <!-- Register Button -->
    <Button
        android:id="@+id/buttonBookAppoinmentAmount"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@null"
        android:text="Register"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_below="@id/editTextAppFees"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorBlack"


        android:layout_marginTop="25dp"/>

    <!-- Already a Member Text -->
    <TextView
        android:id="@+id/textViewExistingUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm already a member"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/buttonBookAppoinmentAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
</RelativeLayout>
